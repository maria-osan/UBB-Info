<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab10_2.controller.LogInController">
    <children>
        <Button fx:id="logInButton" layoutX="125.0" layoutY="235.0" mnemonicParsing="false" onAction="#onLogInButtonClick" prefHeight="25.0" prefWidth="150.0" text="Log In" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="13.0" />
            </font></Button>
        <TextField fx:id="email" layoutX="125.0" layoutY="150.0" prefHeight="25.0" prefWidth="150.0" promptText="Email:" />
        <PasswordField fx:id="password" layoutX="125.0" layoutY="185.0" prefHeight="25.0" prefWidth="150.0" promptText="Password:" />
        <Hyperlink contentDisplay="CENTER" layoutX="235.0" layoutY="270.0" onAction="#onSingUpClick" prefHeight="25.0" prefWidth="50.0" text="Sign up!" textAlignment="CENTER" underline="true" wrapText="true">
            <font>
                <Font size="10.0" />
            </font>
        </Hyperlink>
        <Label layoutX="125.0" layoutY="270.0" prefHeight="25.0" prefWidth="125.0" text="Don't have an account?">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="125.0" layoutY="76.0" prefHeight="56.0" prefWidth="150.0" text="Sign in" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="40.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
