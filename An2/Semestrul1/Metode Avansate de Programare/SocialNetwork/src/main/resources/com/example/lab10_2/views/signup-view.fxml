<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab10_2.controller.SignUpController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="65.0" layoutY="38.0" text="Create an account" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="33.0" />
            </font>
        </Label>
        <TextField fx:id="first_name" layoutX="110.0" layoutY="100.0" prefHeight="25.0" prefWidth="190.0" promptText="First name:" />
        <TextField fx:id="last_name" layoutX="110.0" layoutY="135.0" prefHeight="25.0" prefWidth="190.0" promptText="Last name:" />
        <TextField fx:id="email" layoutX="110.0" layoutY="170.0" prefHeight="25.0" prefWidth="190.0" promptText="Email:" />
        <TextField fx:id="password" layoutX="110.0" layoutY="205.0" prefHeight="25.0" prefWidth="190.0" promptText="Password:" />
        <TextField fx:id="password_confirm" layoutX="110.0" layoutY="240.0" prefHeight="25.0" prefWidth="190.0" promptText="Confirm password:" />
        <Button fx:id="createAccount" layoutX="130.0" layoutY="278.0" mnemonicParsing="false" onAction="#onCreateAccountButtonClick" prefHeight="25.0" prefWidth="140.0" text="Sign up">
            <font>
                <Font name="System Bold" size="14.0" />
            </font></Button>
        <Text layoutX="130.0" layoutY="327.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Alredy have a account?">
            <font>
                <Font size="10.0" />
            </font>
        </Text>
        <Hyperlink layoutX="232.0" layoutY="312.0" onAction="#onLogInClick" text="LogIn!">
            <font>
                <Font size="11.0" />
            </font>
        </Hyperlink>
    </children>
</AnchorPane>
